@page "/pizza"
@using webapi.Models
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>Pizzas</PageTitle>

<div class="card">
    <h1>üçï Our Pizza Menu</h1>
    <p>Fetched directly from the Pizza Controller using Blazor's HttpClient.</p>
    <p>@PageName</p>

    <div class="add-pizza-form">
        <h2>üßë‚Äçüç≥ Add New Pizza</h2>
        <div class="form-row">
            <input type="text" @bind="newPizzaName" placeholder="Pizza name..." class="form-input" />
            <label class="checkbox-container">
                <input type="checkbox" @bind="isGlutenFree" />
                <span>Gluten Free?</span>
            </label>
            <button class="btn btn-success" @onclick="AddPizza" disabled="@isAdding">
                @if (isAdding) { <span>Adding...</span> } else { <span>Add Pizza</span> }
            </button>
        </div>
        @if (!string.IsNullOrEmpty(statusMessage))
        {
            <p class="status-message @(statusMessage.Contains("Error") ? "error" : "success")">@statusMessage</p>
        }
    </div>

    <div class="search-box">
        <input type="text" @bind="searchTerm" @bind:event="oninput" placeholder="Search for your favorite pizza..." class="search-input" />
        <button class="btn btn-primary" @onclick="HandleSearch">üîç Search</button>
    </div>

    @if (pizzas == null)
    {
        <div class="loading">
            <div class="spinner"></div>
            <p>Loading the secret recipes...</p>
        </div>
    }
    else if (!filteredPizzas.Any())
    {
        <div class="no-results">
            <p>No pizzas found matching "@searchTerm"</p>
            <button class="btn btn-secondary" @onclick="ResetSearch">Clear Search</button>
        </div>
    }
    else
    {
        <div class="table-container">
            <table class="pizza-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Gluten Free</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pizza in PaginatedPizzas)
                    {
                        <tr>
                            <td>@pizza.Id</td>
                            <td>@pizza.Name</td>
                            <td>
                                @if (pizza.IsGlutenFree)
                                {
                                    <span class="badge badge-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">No</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (TotalPages > 1)
        {
            <div class="pagination-controls">
                <button class="btn btn-secondary" @onclick="PreviousPage" disabled="@(CurrentPage == 1)">
                    Previous
                </button>
                <span class="page-info">Page @CurrentPage of @TotalPages</span>
                <button class="btn btn-secondary" @onclick="NextPage" disabled="@(CurrentPage == TotalPages)">
                    Next
                </button>
            </div>
        }
    }
</div>

<style>
