        margin-bottom: 1rem;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
</style>

@code {
    private List<Pizza>? pizzas;
    private List<Pizza> filteredPizzas = new();
    private string searchTerm = "";
    private string PageName = "Welcome to our Pizza Order Page";

    private string newPizzaName = "";
    private bool isGlutenFree;
    private bool isAdding;
    private string statusMessage = "";

    // Pagination
    private int CurrentPage { get; set; } = 1;
    private int PageSize { get; set; } = 5;
    private int TotalPages => (int)Math.Ceiling((double)filteredPizzas.Count / PageSize);

    private IEnumerable<Pizza> PaginatedPizzas => filteredPizzas
        .Skip((CurrentPage - 1) * PageSize)
        .Take(PageSize);

    protected override async Task OnInitializedAsync()
    {
        await LoadPizzas();
    }

    private async Task LoadPizzas()
    {
        try
        {
            pizzas = await Http.GetFromJsonAsync<List<Pizza>>($"{Navigation.BaseUri}pizzas");
            HandleSearch(); // Refresh the filtered list
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching pizzas: {ex.Message}");
            pizzas = new List<Pizza>();
            filteredPizzas = new();
        }
    }

    private void HandleSearch()
    {
        if (pizzas == null) return;

        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            filteredPizzas = pizzas.ToList();
        }
        else
        {
            filteredPizzas = pizzas
                .Where(p => p.Name != null && p.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }
        CurrentPage = 1; // Reset to first page on search
    }

    private void NextPage()
    {
        if (CurrentPage < TotalPages) CurrentPage++;
    }

    private void PreviousPage()
    {
        if (CurrentPage > 1) CurrentPage--;
    }

    private async Task AddPizza()
    {
        if (string.IsNullOrWhiteSpace(newPizzaName)) return;

        isAdding = true;
        statusMessage = "";

        try
        {
            var newPizza = new Pizza { Name = newPizzaName, IsGlutenFree = isGlutenFree };
            var response = await Http.PostAsJsonAsync($"{Navigation.BaseUri}pizzas", newPizza);

            if (response.IsSuccessStatusCode)
            {
                statusMessage = "Pizza added successfully! üçï";
                newPizzaName = "";
                isGlutenFree = false;
                await LoadPizzas();
            }
            else
            {
                statusMessage = $"Error: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            statusMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isAdding = false;
        }
    }

    private void ResetSearch()
    {
        searchTerm = "";
        filteredPizzas = pizzas ?? new();
    }
}
